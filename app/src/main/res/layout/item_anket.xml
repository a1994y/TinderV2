<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:background="#EEEEEE"
    android:id="@+id/anket_id"
    android:foreground="?android:selectableItemBackground"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="197dp"
        android:background="@drawable/noavatar"
        android:paddingBottom="30dp"
        android:layout_height="194dp" />


    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/nameAnket"
        android:text="@string/andrey"
        android:textColor="#686868"
        android:textSize="28dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="50dp"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="50dp"
            android:id="@+id/updateBTN"
            android:background="@drawable/ic_replay_black_24dp"
            android:layout_height="50dp"/>

        <TextView
            android:layout_width="20dp"
            android:layout_height="0dp"/>

        <Button
            android:layout_width="80dp"
            android:id="@+id/cancelBTN"
            android:background="@drawable/ic_cancel_black_24dp"
            android:layout_height="80dp"/>

        <TextView
            android:layout_width="20dp"
            android:layout_height="0dp"/>

        <Button
            android:layout_width="80dp"
            android:id="@+id/likeBTN"
            android:background="@drawable/ic_favorite_black_24dp"
            android:layout_height="80dp"/>

        <TextView
            android:layout_width="20dp"
            android:layout_height="0dp"/>

        <Button
            android:layout_width="50dp"
            android:id="@+id/favoriteBTN"
            android:background="@drawable/ic_stars_black_24dp"
            android:layout_height="wrap_content"/>


     </LinearLayout>

</LinearLayout>